<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wufan.calculator.jinzhiActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spannerJR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_weight="1.6"
            />


        <EditText
            android:id="@+id/Jinresult"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="2.6"
            android:backgroundTint="@android:color/darker_gray"
            android:gravity="end|bottom"
            android:layout_gravity="bottom"
            android:textSize="50dp"
            android:maxLines="1" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spannerJP"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_weight="1.6"
            />

    <EditText
        android:layout_width="0dp"

        android:id="@+id/Jinputin"
        android:layout_height="100dp"
        android:layout_weight="2.6"
        android:backgroundTint="@android:color/darker_gray"
        android:gravity="end|bottom"

        android:layout_gravity="bottom"
        android:hint="0"
        android:textSize="50dp"
        android:maxLines="1"

        />


        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.16"
        android:orientation="horizontal"
       >

        <Button
            android:id="@+id/buttonJinHou"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="后退"
            android:textSize="20dip" />


        <Button
            android:id="@+id/buttonJinQing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="清除"
            android:textSize="20dip" />

        <Button
            android:id="@+id/buttona"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="a"
            android:textSize="20dip" />

        <Button
            android:id="@+id/buttonb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="b"
            android:textSize="20dip" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.16"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/buttonJin1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="20dip" />

        <Button
            android:id="@+id/buttonJin2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="20dip" />

        <Button
            android:id="@+id/buttonJin3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="20dip" />

        <Button
            android:id="@+id/buttonc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="c"
            android:textSize="20dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.16"
        android:orientation="horizontal"
       >

        <Button
            android:id="@+id/buttonJin4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="20dip" />

        <Button
            android:id="@+id/buttonJin5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="20dip" />

        <Button
            android:id="@+id/buttonJin6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="20dip" />

        <Button
            android:id="@+id/buttond"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="d"
            android:textSize="20dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.16"
        android:orientation="horizontal"
       >

        <Button
            android:id="@+id/buttonJin7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="20dip" />

        <Button
            android:id="@+id/buttonJin8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="20dip" />

        <Button
            android:id="@+id/buttonJin9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="20dip" />

        <Button
            android:id="@+id/buttone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="e"
            android:textSize="20dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.16"
        android:orientation="horizontal"
       >

        <Button
            android:id="@+id/buttonJin0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="20dip" />

        <Button
            android:id="@+id/buttonZhuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="转换"
            android:textSize="20dip" />


        <Button
            android:id="@+id/buttonf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="f"
            android:textSize="20dip" />

    </LinearLayout>


</LinearLayout>
